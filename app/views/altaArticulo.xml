<Alloy>
	<Window id="winAltaArticulo">
		<ActionBar platform="android" displayHomeAsUp="true" title="Inventario CGMA" subtitle="Alta articulo" onHomeIconItemSelected="volver" />
		<ScrollView id="scrollUnico">
			<View class="scrollItem">
				<View id="wrapContenedor">
					<View class="contenedor">
						<View id="viewFormulario">
							<View platform="android" class="cajon">
								<Picker platform="android" class="txtField" id="pickerTipoArticulo" selectionIndicator="true"></Picker>
							</View>
							<View  id="cajonTxtCalle" class="cajon">
								<TextField  id="txtProgresivo" class="txtField" hintText="Progresivo" />
							</View>
							<View  id="cajonTxtCalle" class="cajon">
								<TextField  id="txtCaracteristicas" class="txtField" hintText="Caracteristicas" />
							</View>
							<View platform="android" class="cajon">
								<Picker platform="android" class="txtField" id="pickerEstatusArt" selectionIndicator="true"></Picker>
							</View>
							<View  id="cajonTxtCalle" class="cajon">
								<TextField  id="txtEmail" class="txtField" hintText="e-mail responsable" />
							</View>
						</View>
						<View id="viewPie">
							<View id="btnAccion">
								<Label id="lbAccion">Enviar</Label>
							</View>
						</View>
					</View>
				</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>
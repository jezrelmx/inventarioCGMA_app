<Alloy>
	<Window id="winadmin">
		<ActionBar platform="android" displayHomeAsUp="true" title="Inventario CGMA" subtitle="Administrador" onHomeIconItemSelected="volver" />
		<View class="viewSeparador"/>
		<View id="vistainfo">
			<Label id="nombre" class="lbltexto">Nombre</Label>
			<Label id="cargo" class="lbltexto">Cargo</Label>
			<Label id="empleado" class="lbltexto">Empleado</Label>
		</View>
		<View class="viewSeparador"/>
		<View class="wrapContenidoBoton" onClick="abrirusuarios">
			<View class="viewImgBoton">
				<ImageView id="imgUsuario"></ImageView>
			</View>
			<View class="viewTxtBoton">
				<View class="viewTxtSeccion">
					<Label class="txtBotonTitulo">Usuarios</Label>
				</View>
				<View class="viewTxtInfo">
					<View class="viewTxtBotonSub1">
					</View>
				</View>
			</View>
		</View>
		<View class="viewSeparador"/>
		<View class="wrapContenidoBoton" onClick="abrirarticulos">
			<View class="viewImgBoton">
				<ImageView id="imgArticulo"></ImageView>
			</View>
			<View class="viewTxtBoton">
				<View class="viewTxtSeccion">
					<Label class="txtBotonTitulo">Articulos</Label>
				</View>
				<View class="viewTxtInfo">
					<View class="viewTxtBotonSub1"></View>
				</View>
			</View>
		</View>
		<!-- <View class="viewSeparador"/> -->
	</Window>
</Alloy>

<Alloy>
	<Window id="winUsuarios">
		<ActionBar platform="android" displayHomeAsUp="true" title="Inventario CGMA" subtitle="Articulos" onHomeIconItemSelected="volver" />
	    <View class="viewSeparador"/>
		<View class="wrapContenidoBoton" onClick="abrirAltaUsuario">
			<View class="viewImgBoton">
				<ImageView id="imgAltaArticulo"></ImageView>
			</View>
			<View class="viewTxtBoton">
				<View class="viewTxtSeccion">
					<Label class="txtBotonTitulo">Alta Articulo</Label>
				</View>
				<View class="viewTxtInfo">
					<View class="viewTxtBotonSub1">
						<Label class="txtBotonSub1">Registro de nuevos articulos</Label>
					</View>
				</View>
			</View>
		</View>
		<View class="viewSeparador"/>
		<View class="wrapContenidoBoton" onClick="abrirBajaUsuario">
			<View class="viewImgBoton">
				<ImageView id="imgBajaArticulo"></ImageView>
			</View>
			<View class="viewTxtBoton">
				<View class="viewTxtSeccion">
					<Label class="txtBotonTitulo">Baja Articulo</Label>
				</View>
				<View class="viewTxtInfo">
					<View class="viewTxtBotonSub1">
						<Label class="txtBotonSub1">Modifica el estatus de articulos</Label>
					</View>
				</View>
			</View>
		</View>
		<View class="viewSeparador"/>
		<View class="wrapContenidoBoton" onClick="abrirConsultaUsuario">
			<View class="viewImgBoton">
				<ImageView id="imgConsultaArticulo"></ImageView>
			</View>
			<View class="viewTxtBoton">
				<View class="viewTxtSeccion">
					<Label class="txtBotonTitulo">Consultar Articulos</Label>
				</View>
				<View class="viewTxtInfo">
					<View class="viewTxtBotonSub1">
						<Label class="txtBotonSub1">Consulta resguardos de articulos</Label>
					</View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>








<Alloy>
	<Window id="winAltaUsuario">
		<ScrollView id="scrollUnico">
			<View class="scrollItem">
				<View id="wrapContenedor">
					<View class="contenedor">
						<View id="viewFormulario">
							<View  id="cajonTxtNombre" class="cajon">
								<TextField  id="txtNombre" class="txtField" hintText="Nombre" />
							</View>
							<View  id="cajonTxtApPaterno" class="cajon">
								<TextField  id="txtApPaterno" class="txtField" hintText="Apellido paterno" />
							</View>
							<View  id="cajonTxtApMaterno" class="cajon">
								<TextField  id="txtApMaterno" class="txtField" hintText="Apellido materno" />
							</View>
							<View  id="cajonTxtCargo" class="cajon">
								<TextField  id="txtCargo" class="txtField" hintText="Cargo" />
							</View>
							<View  id="cajonTxtNumEmpleado" class="cajon">
								<TextField  id="txtNumEmpleado" class="txtField" hintText="Número de empleado" />
							</View>
							<View  id="cajonTxtCorreoElectronico" class="cajon">
								<TextField  id="txtCorreoElectronico" class="txtField" hintText="Correo electrónico" />
							</View>
							<View  id="cajonTxtContrasenia" class="cajon">
								<TextField  id="txtContrasenia" class="txtField" hintText="Contraseña" />
							</View>
							<View platform="android" class="cajon">
								<Picker id="pickerDireccionEjecutiva" class="txtField">
									<PickerColumn id="column1"></PickerColumn>
								</Picker>
							</View>
							<View platform="android" class="cajon">
								<Picker id="pickerTipoUsuario" class="txtField"></Picker>
							</View>
							<View id="cajonDelegacionIOS" platform="ios" formFactor="handheld">
								<Label id="txtPickerDelegacion">Delegación</Label>
							</View>
							<Picker id="picker" top="50" selectionIndicator="true">
								<PickerColumn id="column1">
									<PickerRow title="Bananas"/>
									<PickerRow title="Strawberries"/>
									<PickerRow title="Mangos"/>
									<PickerRow title="Grapes"/>
								</PickerColumn>
							</Picker>
						</View>
						<View id="viewPie">
							<View id="btnAccion">
								<Label id="lbAccion">Enviar</Label>
							</View>
						</View>
					</View>
				</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>